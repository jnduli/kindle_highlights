category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

library
  exposed-modules:     KindleHighlights, CommandOptions
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5,
                       parsec,
                       optparse-applicative,
                       text,
                       containers,
                       time

--executable kindle-highlights
--  hs-source-dirs:      src
