test-suite spec
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs: test
  other-modules:       ParserSpec 
  build-depends:       base >= 4.7 && < 5,
                       parsec,
                       optparse-applicative,
                       text,
                       containers,
                       kindle-highlights,
                       time,
                       hspec >= 2.7,
                       hspec-discover >= 2.7
  default-language:    Haskell2010
  ghc-options: -Wall
  build-tool-depends: hspec-discover:hspec-discover == 2.*
